<resources>
    <style name="MoodTracker" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MoodTrackerActionBar</item>
        <item name="android:actionMenuTextColor">@drawable/menu_item</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenuText</item>
    </style>

    <style name="MoodTrackerActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/text_dark_grey</item>
    </style>

    <style name="ActionBarMenuText" parent="DarkGreyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/menu_item</item>
    </style>

    <style name="TextSurveyItem" parent="DarkGreyText">
        <item name="android:textSize">@dimen/text_survey</item>
    </style>

    <style name="SurveySelector" parent="TextSurveyItem">
        <item name="android:padding">@dimen/survey_text_padding</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/holo_light</item>
    </style>

    <style name="DarkGreyText">
        <item name="android:textColor">@color/text_dark_grey</item>
    </style>

    <style name="SurveyQuestionHeader" parent="WhiteText">
        <item name="android:textSize">@dimen/survey_heading_text</item>
    </style>

    <style name="SurveyQuestionSubHeader" parent="WhiteText">
        <item name="android:textSize">@dimen/survey_heading_subtext</item>
    </style>

    <style name="DrawerRowText" parent="WhiteText">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/navigation_drawer_text_size</item>
    </style>

    <style name="TakeSurveyButton" parent="WhiteText">
        <item name="android:textSize">@dimen/take_survey_text</item>
    </style>

</resources>
