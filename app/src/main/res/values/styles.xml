<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextSurveyItem">
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="android:textSize">@dimen/text_survey</item>
    </style>

    <style name="SurveySelector" parent="TextSurveyItem">
        <item name="android:padding">@dimen/survey_text_padding</item>
    </style>


    <style name="WhiteText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SurveyQuestionHeader" parent="WhiteText">
        <item name="android:textSize">@dimen/survey_heading_text</item>
    </style>

    <style name="SurveyQuestionSubHeader" parent="WhiteText">
        <item name="android:textSize">@dimen/survey_heading_subtext</item>
    </style>

    <style name="TakeSurveyButton" parent="WhiteText">
        <item name="android:textSize">@dimen/take_survey_text</item>
    </style>

</resources>
